    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug File",
            "program": "${file}",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Run Server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/scripts/server.js"
        }
    ]
}